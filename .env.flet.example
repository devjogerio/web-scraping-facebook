# Configurações do Banco de Dados
DATABASE_URL=sqlite:///facebook_scraper.db

# Configurações de Scraping
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_HEADLESS=true
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Configurações de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Configurações de Exportação
EXPORT_DIR=exports
EXPORT_MAX_ROWS=10000
EXPORT_FILENAME_PREFIX=facebook_data

# Configurações da Interface Flet
FLET_DEBUG=false
FLET_PORT=8080
FLET_HOST=localhost
FLET_WEB=false

# Configurações de Performance
MAX_CONCURRENT_TASKS=3
DATA_REFRESH_INTERVAL=5
UI_UPDATE_INTERVAL=1

# Configurações de Segurança
MAX_TASK_DURATION=3600
MAX_ITEMS_PER_TASK=10000
RATE_LIMIT_ENABLED=true

# Configurações do ChromeDriver
CHROMEDRIVER_PATH=
CHROME_BINARY_PATH=
CHROME_OPTIONS_ARGS=--no-sandbox,--disable-dev-shm-usage,--disable-gpu