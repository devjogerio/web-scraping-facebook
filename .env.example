# Configurações da Aplicação
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Configurações do Banco de Dados
DATABASE_URL=sqlite:///facebook_scraper.db
DATABASE_URL_TEST=sqlite:///test_facebook_scraper.db

# Configurações de Scraping
SCRAPING_DELAY_MIN=1
SCRAPING_DELAY_MAX=3
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Configurações do Selenium
WEBDRIVER_PATH=/path/to/chromedriver
HEADLESS_MODE=True
WINDOW_SIZE=1920,1080

# Configurações de Logs
LOG_LEVEL=INFO
LOG_FILE=logs/facebook_scraper.log
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5

# Configurações de Exportação
EXPORT_DIR=exports
MAX_EXPORT_SIZE=104857600

# Configurações do Celery (para processamento assíncrono)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Configurações de Segurança
CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Configurações de Rate Limiting
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=100 per hour

# Configurações de Desenvolvimento
TESTING=False
DEBUG_TB_ENABLED=False
DEBUG_TB_INTERCEPT_REDIRECTS=False